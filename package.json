{
  "name": "lumaqatest",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "cypress:open": "cypress open",

    "cypress:run:ui": "cypress run --spec 'cypress/e2e/features/**/*.feature' --reporter mochawesome --reporter-options reportDir=cypress/reports/ui,json=true,html=false,overwrite=false",
    "cypress:run:api": "cypress run --spec 'cypress/api/features/**/*.feature' --reporter mochawesome --reporter-options reportDir=cypress/reports/api,json=true,html=false,overwrite=false",

    "merge-reports": "mkdir -p cypress/reports/merged && npx mochawesome-merge cypress/reports/**/*json > cypress/reports/merged/mochawesome.json",
    "generate-html": "npx marge cypress/reports/merged/mochawesome.json --reportDir cypress/reports/merged --inline",

    "test": "npm run cypress:run:ui && npm run cypress:run:api && npm run merge-reports && npm run generate-html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gmmirand/lumaQaTest.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gmmirand/lumaQaTest/issues"
  },
  "homepage": "https://github.com/gmmirand/lumaQaTest#readme",
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^23.1.0",
    "@cucumber/gherkin": "^35.0.0",
    "@cypress/webpack-preprocessor": "^7.0.1",
    "@types/chai": "^5.2.2",
    "@types/cypress": "^0.1.6",
    "@types/jquery": "^3.5.33",
    "@types/mocha": "^10.0.10",
    "chai": "^6.0.1",
    "cypress": "^15.2.0",
    "cypress-file-upload": "^5.0.8",
    "cypress-real-events": "^1.15.0",
    "esbuild": "^0.25.9",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
